<p id="notice"><%= notice %></p>

<h1>Restaurants</h1>

<table>
  <thead>
    <tr>
      <th><%= image_tag("star.png", size: "25x25", alt: "star") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sorted_restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant[0] %></td>
        <td><h3><%= link_to restaurant[1].name, restaurant[1] %></h3>
          <% if restaurant[1].user === current_user %>
            <div><%= link_to 'Edit', edit_restaurant_path(restaurant[1])%> | 
            <%= link_to 'Delete', restaurant[1], method: :delete, data: { confirm: 'Are you sure?' } %></div></td>
          <% end %>
          <% if restaurant[1].images.attached? %>
            <td><%= image_tag restaurant[1].images[0], style: 'height:15vh; width:auto;'%></td>
          <% end %> 
      </tr>
    <% end %>
  </tbody>
</table>

<br>

